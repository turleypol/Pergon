use uo;

Include ":popuphook:popupmenu";

Program Install()
	return 1;
EndProgram

Exported Function haspopup(mobile)
	return 1;
	mobile := mobile;
EndFunction

Exported Function popupinfo(mobile, who)
	return {
	  {ID_VENDOR_HEAL, CLILOC_VENDOR_HEAL},
	  {ID_VENDOR_TRAIN, CLILOC_VENDOR_TRAIN}
	};
	mobile := mobile;
	who := who;
EndFunction