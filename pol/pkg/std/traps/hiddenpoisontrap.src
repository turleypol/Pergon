use util;

Include "include/poison";
Include "traps";

Program Walk_on_Poison_Trap(mobile, trap)

	If (!mobile.dead && (mobile.cmdlevel < CMDLEVEL_SEER))
		Var dieroll := PlayTrapEffect(trap);

		AddPoisonLevel(mobile, RandomDiceRoll(dieroll)); // Vergiftung durchfuehren
	Endif
EndProgram
