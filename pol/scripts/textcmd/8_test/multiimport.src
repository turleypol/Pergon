/////////////////
// Hauptprogram
/////////////////

Program TextCMD_MultiImport(who, params)
  Set_Script_Option(SCRIPTOPT_NO_RUNAWAY, 1);

  PrintErrorMessage(1);
  ImportArea(who, params);
  PrintErrorMessage(2);
EndProgram

//////////////////////////////////////
// ImportArea - Importiert die Items
//////////////////////////////////////

Function ImportArea(who, params)
  Var filename:="statics/multi";
  If (params)
    filename:="statics/"+params;
  EndIf

  Var datafile:=ReadConfigFile(filename);
  If (datafile)
    Var min_x:=6144;
    Var min_y:=4096;
    Var object;
    Var item;

    ForEach name in GetConfigStringKeys(datafile)
      item:=datafile[name];
      If (item)
        If (min_x>item.x)
          min_x:=item.x;
        EndIf
        If (min_y>item.y)
          min_y:=item.y;
        EndIf
      EndIf
    EndForEach

    min_x:=min_x-who.x;
    min_y:=min_y-who.y;

    ForEach name in GetConfigStringKeys(datafile)
      item:=datafile[name];
      If (item)
        object:=CreateItemAtLocationPergon(item.x-min_x, item.y-min_y, item.z, item.id, 1,who.realm);
        If (object)
          If (item.name)
            SetName(object, item.name);
          EndIf
          object.color:=item.color;
          object.decayat:=0;
          object.movable:=0;
        Else
          PrintErrorMessage(3, {item.id, item.x, item.y, item.z});
        EndIf
      EndIf
    EndForEach

    UnloadConfigFile(filename);

    PrintErrorMessage(4, { }, who);
  Else
    PrintErrorMessage(5, {filename}, who);
  EndIf
EndFunction
