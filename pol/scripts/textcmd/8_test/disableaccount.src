//   TextCMD Account Disable - Account eines Spielern deaktivieren
//
//   Modifications:
//
/////////////////////////////////////////////////////////////////

/////////////////
// Bibliotheken
/////////////////

Use uo;
Use os;

/////////////
// Includes
/////////////

Include "include/string";
Include "include/msgs";
Include "include/pergonutil";

//////////////////
// Hauptprogramm
//////////////////

Program TextCMD_Disable(who)
  Set_Script_Option(SCRIPTOPT_NO_RUNAWAY, 1);

  Var buchstabe:=ChooseAccountBuchstabe(who, FillInAccountBuchstaben(SHOW_ENABLED)); // Einen Anfangsbuchstaben auswaehlen
  If (buchstabe<>-1)
    Var accountname:=ChooseAccountName(who, FillInAccountNames(buchstabe,SHOW_ENABLED)); // Einen Account auswaehlen
    If (accountname)
      Var account:=FindAccount(accountname);
      If (account)
        If (account.enabled)
          account.disable();

          SendSysMessagePergon(who, "Der Account '"+accountname+"' wurde deaktiviert.");
          SysLog("DISABLE! "+who.name+" ["+who.acctname+"] hat "+accountname+" deaktiviert!");
        Else
          SendSysMessagePergon(who, "Der Account '"+accountname+"' war bereits deaktiviert.");
        EndIf
      Else
        SysLog("'"+accountname+"' gibt es nicht !");
      EndIf
    EndIf
  EndIf
EndProgram
